# Docker Compose Environment Configuration
# Copy this file to .env.docker and customize for your environment

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL
DB_NAME=lionpack_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/lionpack_dev

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_URL=redis://:redis_dev_password@redis:6379

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Supabase URLs and Keys (Get from Supabase Dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ============================================================================
# GITHUB OAUTH CONFIGURATION
# ============================================================================

# GitHub OAuth App Credentials (Register at https://github.com/settings/applications)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Next.js
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API
API_PORT=3000
API_HOST=0.0.0.0

# ============================================================================
# PGADMIN CONFIGURATION
# ============================================================================

# PgAdmin - Database Management UI
PGADMIN_EMAIL=admin@lionpack.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================================================
# REDIS COMMANDER CONFIGURATION
# ============================================================================

# Redis Commander - Redis Management UI
REDIS_COMMANDER_PORT=8081

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================================================
# SESSION & SECURITY
# ============================================================================

# Session Configuration
SESSION_COOKIE_NAME=lionpack_session
SESSION_MAX_AGE=86400  # 24 hours in seconds
SESSION_COOKIE_SECURE=false  # Set to true in production
SESSION_COOKIE_SAME_SITE=lax

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key
HMAC_KEY=your-32-character-hmac-key

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate Limit Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# Datadog APM (Optional)
DD_TRACE_ENABLED=false

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email Service (SendGrid, Mailgun, etc.)
EMAIL_PROVIDER=mailgun
EMAIL_FROM=noreply@lionpack.local
MAILGUN_API_KEY=

# ============================================================================
# STORAGE
# ============================================================================

# AWS S3 or similar
STORAGE_TYPE=local  # or 's3'
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=lionpack-dev

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Feature Toggles
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_EXPORT_PDF=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_TEAM_MANAGEMENT=true

# ============================================================================
# DEBUG
# ============================================================================

# Debug Flags
DEBUG_MODE=true
DEBUG_SQL_QUERIES=false
DEBUG_OAUTH_FLOW=false
